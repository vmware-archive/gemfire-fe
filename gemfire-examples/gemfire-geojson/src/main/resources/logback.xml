<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p{5} %c{0}: %m%n</pattern>
        </encoder>
    </appender>
    
    <logger name="io.pivotal.bds.gemfire.geojson" level="INFO"/>
    
    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>
    
</configuration>